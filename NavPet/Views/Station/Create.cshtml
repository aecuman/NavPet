
@model NavPet.Models.Station 
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Station", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    

<h2>Create</h2>



    <body>
        
        <h4>@User.Identity.Name Petrol Station</h4>

        
        <html data-ng-app="crudModule">
                   
            <table id="tblContainer" data-ng-controller="CRUD_OperController" class="table">
                <tr>
                    <td>
                        <table>
<tr style="height: 30px; background-color: skyblue; color: maroon;">
                                <th>Petrol</th>
                                <th>Diesel</th>
                                <th>UnleadedExtra</th>
                                <th>By</th>
                                <th>Date</th>
                                
                            </tr>
                            <tbody data-ng-repeat="stud in Station">
                                <tr style="border-bottom: solid 1px lightgrey; padding: 2px;">
                                    

                                    <td><span>{{stud.Petrol|currency:"":0}}</span></td>
                                    <td><span>{{stud.Diesel|currency:"":0}}</span></td>
                                    <td><span>{{stud.UnleadedExtra|currency:"":0}}</span></td>
                                    <td><span>{{stud.By}}</span></td>
                                    <td ><span>{{stud.LastModified|date:'MM/dd/yyyy'}}</span></td>
                                    

                                </tr>
                            </tbody>
                        </table>

                    </td>
                </tr>
                <tr>
                    <td>
                        <div style="color: red;">{{Message}}</div>
                       
       
    </html>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
                           
                               

                                   
                                        <input class="form-control" id="Name" name="Name" type="hidden" value=@User.Identity.Name readonly="readonly"  />
                                       
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Petrol, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Petrol, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Petrol, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Diesel, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.Diesel, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Diesel, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.UnleadedExtra, new { @class = "col-md-2 control-label" })
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(m => m.UnleadedExtra, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.UnleadedExtra, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.By, new { @class = "col-md-2 control-label" })
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(m => m.By, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.By, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Create" class="btn btn-default" />
                                            </div>
                                        </div>

                                    </div>
        </body>
        
}
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/angular-route.js"></script>
<script src="~/Scripts/myAjs/Module.js"></script>
<script src="~/Scripts/myAjs/Service.js"></script>
<script src="~/Scripts/myAjs/Controller.js"></script>  
@Scripts.Render("~/bundles/bootstrap")